const dateSpan = document.getElementById("date");
const timeSpan = document.getElementById("time");
const dayOfWeekSpan = document.getElementById("dayOfWeek");
const monthNameSpan = document.getElementById("monthName");
const fullInfoSpan = document.getElementById("fullInfo");

const refreshBtn = document.getElementById("refreshBtn");

const daysOfWeek = [
  "Niedziela",
  "Poniedziałek",
  "Wtorek",
  "Środa",
  "Czwartek",
  "Piątek",
  "Sobota"
];

const months = [
  "Styczeń",
  "Luty",
  "Marzec",
  "Kwiecień",
  "Maj",
  "Czerwiec",
  "Lipiec",
  "Sierpień",
  "Wrzesień",
  "Październik",
  "Listopad",
  "Grudzień"
];

function displayDateTime() {
  const now = new Date();

  const day = String(now.getDate()).padStart(2, "0");
  const monthNumber = String(now.getMonth() + 1).padStart(2, "0");
  const year = now.getFullYear();

  const hours = String(now.getHours()).padStart(2, "0");
  const minutes = String(now.getMinutes()).padStart(2, "0");
  const seconds = String(now.getSeconds()).padStart(2, "0");

  const dayName = daysOfWeek[now.getDay()];
  const monthName = months[now.getMonth()];

  dateSpan.textContent = `${day}.${monthNumber}.${year}`;
  timeSpan.textContent = `${hours}:${minutes}:${seconds}`;
  dayOfWeekSpan.textContent = dayName;
  monthNameSpan.textContent = monthName;
  fullInfoSpan.textContent = `Dzisiaj jest ${dayName}, ${day}.${monthNumber}.${year}, godzina ${hours}:${minutes}:${seconds}`;
}

refreshBtn.addEventListener("click", displayDateTime);

displayDateTime();


