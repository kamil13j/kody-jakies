const baseWordInput = document.getElementById("baseWord");
const numberInput = document.getElementById("number");

const generateBtn = document.getElementById("generateBtn");
const clearBtn = document.getElementById("clearBtn");

const resultsBox = document.getElementById("results");

const basicPassword = document.getElementById("basicPassword");
const uppercasePassword = document.getElementById("uppercasePassword");
const lowercasePassword = document.getElementById("lowercasePassword");
const reversedPassword = document.getElementById("reversedPassword");
const repeatedPassword = document.getElementById("repeatedPassword");
const firstChars = document.getElementById("firstChars");
const lastChars = document.getElementById("lastChars");
const variantsList = document.getElementById("variantsList");

function generatePasswords() {
  const baseWord = baseWordInput.value;
  const number = numberInput.value;

  if (baseWord === "" || number === "") {
    alert("Wprowadź słowo bazowe i liczbę!");
    return;
  }

  const basic = baseWord + number;
  basicPassword.textContent = basic;

  uppercasePassword.textContent = basic.toUpperCase();

  lowercasePassword.textContent = basic.toLowerCase();

  const reversedWord = baseWord.split("").reverse().join("");
  reversedPassword.textContent = reversedWord + number;

  repeatedPassword.textContent = basic.repeat(3);

  firstChars.textContent = basic.slice(0, 3);

  lastChars.textContent = basic.slice(-3);

  variantsList.innerHTML = "";
  for (let i = 1; i <= 5; i++) {
    const item = document.createElement("div");
    item.className = "password-item";
    item.textContent = basic + i;
    variantsList.appendChild(item);
  }

  resultsBox.style.display = "block";
}

function clearAll() {
  baseWordInput.value = "";
  numberInput.value = "";
  resultsBox.style.display = "none";
  variantsList.innerHTML = "";
}

generateBtn.addEventListener("click", generatePasswords);
clearBtn.addEventListener("click", clearAll);






