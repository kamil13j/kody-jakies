<head>
  <meta charset="UTF-8">
  <title>Slot Machine Hardcore</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #111;
      color: white;
      text-align: center;
      padding-top: 40px;
    }
    .slot {
      font-size: 3em;
      width: 100px;
      height: 100px;
      background-color: #000;
      border: 3px solid #fff;
      border-radius: 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin: 10px;
    }
    #result {
      font-size: 1.5em;
      margin-top: 20px;
    }
    #score {
      font-size: 1.2em;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <h1>🎰 Slot Machine Hardcore</h1>
  <div id="score">Punkty: <span id="points">100</span></div>
  <div>
    <div class="slot" id="slot1">❓</div>
    <div class="slot" id="slot2">❓</div>
    <div class="slot" id="slot3">❓</div>
  </div>
  <input type="number" id="bet" class="form-control w-25 mx-auto mt-3" min="10" max="100" value="10">
  <button class="btn btn-danger mt-3" onclick="spin()">Zakręć</button>
  <button class="btn btn-secondary mt-2" onclick="resetGame()">Resetuj</button>
  <div id="result" class="mt-4"></div>

  <script>
    const symbols = ["🍒", "🍋", "💎", "🔔", "🍀", "⭐", "7️⃣"];
    const symbolValues = {
      "🍒": 2,
      "🍋": 3,
      "💎": 10,
      "🔔": 5,
      "🍀": 4,
      "⭐": 6,
      "7️⃣": 20
    };

    let points = 100;

    function weightedRandom(baseSymbol, chanceSame, chanceOther) {
      const pool = [];
      for (let i = 0; i < chanceSame; i++) pool.push(baseSymbol);
      for (let i = 0; i < chanceOther; i++) {
        const other = symbols.filter(s => s !== baseSymbol);
        pool.push(other[Math.floor(Math.random() * other.length)]);
      }
      return pool[Math.floor(Math.random() * pool.length)];
    }

    async function spin() {
      const bet = parseInt(document.getElementById("bet").value);
      if (isNaN(bet) || bet < 10 || bet > points) {
        document.getElementById("result").textContent = "Nieprawidłowy zakład!";
        return;
      }

      points -= bet;
      updateScore();

      const slot1 = document.getElementById("slot1");
      const slot2 = document.getElementById("slot2");
      const slot3 = document.getElementById("slot3");

      slot1.textContent = "🎲";
      slot2.textContent = "🎲";
      slot3.textContent = "🎲";
      document.getElementById("result").textContent = "";

      await new Promise(r => setTimeout(r, 500));
      const first = symbols[Math.floor(Math.random() * symbols.length)];
      slot1.textContent = first;

      await new Promise(r => setTimeout(r, 500));
      const second = weightedRandom(first, 3, 7);
      slot2.textContent = second;

      await new Promise(r => setTimeout(r, 500));
      const third = weightedRandom(second, 1, 9);
      slot3.textContent = third;

      const combo = [first, second, third];
      const unique = new Set(combo).size;

      let reward = 0;
      let message = "Brak wygranej 😢";

      if (unique === 1) {
        reward = bet + symbolValues[first] * 5 * (bet / 10);
        message = `🎉 TRZY ${first}! Wygrywasz ${reward} pkt!`;
      } else if (unique === 2) {
        const repeated = combo.find(s => combo.filter(x => x === s).length > 1);
        reward = Math.floor(symbolValues[repeated] * 2 * (bet / 10));
        message = `👍 DWA ${repeated}! Wygrywasz ${reward} pkt!`;
      }

      points += reward;
      updateScore();
      document.getElementById("result").textContent = message;

      if (points <= 0) {
        document.getElementById("result").textContent = "💀 KONIEC GRY! Brak punktów.";
      }
    }

    function updateScore() {
      document.getElementById("points").textContent = points;
    }

    function resetGame() {
      points = 100;
      updateScore();
      document.getElementById("slot1").textContent = "❓";
      document.getElementById("slot2").textContent = "❓";
      document.getElementById("slot3").textContent = "❓";
      document.getElementById("result").textContent = "Gra zresetowana.";
    }
  </script>
</body>
</html>
