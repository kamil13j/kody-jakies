<body>

<div class="container">
  <h1>Losowanie elementów z tablicy</h1>

  <fieldset>
    <label>wprowadź nazwisko: </label>
    <input type="text" id="nazwisko">
    <button onclick="dodajOsobe()">dodaj osobę</button>
    <button onclick="pokazTablice()">losowanie</button>
    <p>lista osób zawiera <span id="iloscOsob">0</span> osób</p>
  </fieldset>

  <div class="tablica">
    <strong>Tablica z nazwiskami:</strong>
    <p id="listaNazwisk"></p>
  </div>

  <div>
    <label>ile osób wylosować? </label>
    <input type="number" id="iloscLosowania" value="1" min="1">
    <button onclick="zatwierdzLiczbe()">zatwierdź</button>
  </div>

  <div class="aktualna">
    <strong>aktualna tablica</strong>
    <p id="aktualnaTablica"></p>
  </div>

  <div>
    <button onclick="losuj()">Losuj</button>
  </div>

  <div class="result">
    <strong>Wylosowane osoby:</strong>
    <ol id="wyniki"></ol>
    <p id="brak"></p>
  </div>
</div>

<script>
let osoby = [
  "Kowal", "Lis", "Nowak", "Nowakowski", "Iksiński",
  "Milewski", "Kamińska", "Lasik", "Barczyński",
  "Lewandowski", "Woźnicka", "Kotuła"
];

let liczbaLosowan = 1;

window.onload = () => {
  aktualizujListe();
  document.getElementById("aktualnaTablica").innerText = osoby.join(", ");
};

function dodajOsobe() {
  const input = document.getElementById('nazwisko');
  const nazwisko = input.value.trim().toUpperCase();
  if (nazwisko) {
    osoby = [...osoby, nazwisko]; 
    input.value = '';
    aktualizujListe();
  }
}

function pokazTablice() {
  document.getElementById('listaNazwisk').innerText = osoby.join(", ");
}

function zatwierdzLiczbe() {
  const ilosc = parseInt(document.getElementById('iloscLosowania').value);
  if (ilosc > 0 && ilosc <= osoby.length) {
    liczbaLosowan = ilosc;
    document.getElementById('aktualnaTablica').innerText = osoby.join(", ");
  } else {
    alert('Podaj poprawną liczbę (nie większą niż liczba osób na liście)');
  }
}

function losuj() {
  if (osoby.length === 0) {
    document.getElementById('brak').innerText = 'Brak nazwisk do losowania';
    return;
  }

  const kopia = [...osoby];
  const wynik = Array.from({ length: liczbaLosowan }, () => {
    const index = Math.floor(Math.random() * kopia.length);
    return kopia.splice(index, 1)[0];
  });

  const lista = document.getElementById('wyniki');
  lista.innerHTML = wynik.map(osoba => `<li>${osoba}</li>`).join("");

  document.getElementById('brak').innerText = wynik.length === 0
    ? 'brak nazwisk do losowania'
    : '';
}

function aktualizujListe() {
  document.getElementById('iloscOsob').innerText = osoby.length;
  document.getElementById('listaNazwisk').innerText = osoby.map(o => o).join(", ");
}
</script>

</body>
</html>
